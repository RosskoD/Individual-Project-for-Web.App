@model IEnumerable<CategoryFormServiceModel>
@{
    ViewData["Title"] = "All Categories";
}
<h2>@ViewData["Title"]  <a asp-action="Create" class="btn btn-default">Add Category</a></h2>
<br />
@if (User.IsInRole(WebConstants.AdministratorRole))
{
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50">@category.Id</td>
                <td width="500">@category.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class=" btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}