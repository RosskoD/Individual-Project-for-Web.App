@model CartItemListingViewModel
@{
    ViewData["Title"] = "Details";
}
<h2>View Cart</h2>
<br />
@if (!Model.Products.Any())
{
    <h4>Your cart is empty</h4>
}
else
{
    <table class="table table-bordered table-hover">
        <thead style="text-align:center">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        <a class="btn btn-default btn-sm" asp-area="" asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@item.ProductId">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a> @item.Name
                    </td>
                    <td>@item.Price lv</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity) lv</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-6"><strong>Total Weight: @Model.Products.Sum(p => p.Weight * p.Quantity)</strong></div>
        <div class="col-md-6" style="text-align:right"><strong>Grand Total: @Model.Products.Sum(p => p.Price * p.Quantity) lv</strong></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-success" asp-area="" asp-controller="ShoppingCart" asp-action="Clear">Clear</a>
            <a class="btn btn-success" asp-area="" asp-controller="ShoppingCart" asp-action="Update">Update</a>
        </div>
        <div class="col-md-6" style="text-align:right">
            <a class="btn btn-success" asp-area="" asp-controller="ShoppingCart" asp-action="FinishOrder">Order</a>
        </div>
    </div>
}
