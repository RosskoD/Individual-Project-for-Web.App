@model ProductDetailViewModel
@{
    ViewData["Title"] = "Detail";
}
<h2>@Model.Product.Name</h2>
<h4>@Model.Product.Code</h4>
<div class="row">
    <div class="col-md-6">
        <img src="@Model.Product.ImageUrl" style="height:200px; width:200px" />
    </div>
    <div class="col-md-4">
        <div class="col-md-6" style="text-align:right">
            <p>Producer:</p>
            <p>Weight:</p>
            <p>Price:</p>
            <label asp-for="Product.Quantity"></label>
            <p><br /></p>
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="ShoppingCart" asp-action="AddToCart">Add to cart</button>
        </div>
        <div class="col-md-4" style="text-align:left">
            <p>@Model.Product.ProducerName</p>
            <p>@Model.Product.Weight kg</p>
            <p>@Model.Product.Price lv</p>
            <input asp-for="Product.Quantity" type="number" step="1" />
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>           
        </div>
    </div>

</div>
<hr />
<br />
<div class="row">
    <p>Description</p>
    <p>@Model.Product.Description</p>
</div>



